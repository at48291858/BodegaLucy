@model BDLUCY_CodeFirst_Crud.Models.Producto

@{
    ViewData["Title"] = "Create";
}

<body style="background-color: #ffeae5;">
    <div class="row mt-4 bg-white border border-dark">
        <div class="container mb-0 pt-0 pl-0 pr-0">
            <div class="row mb-0 pt-0 pl-0 pr-0" style="background-color:#fe9f8b;">
                <h1 class="display-6 text-white">Registrar Producto</h1>
            </div>
                <hr />

                <div class="row">
                    <div class="col">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="form-group col-4">
                                    <label asp-for="Codigo_Subcategoria" class="control-label"></label>
                                    <select asp-for="Codigo_Subcategoria" class ="form-control" asp-items="ViewBag.Codigo_Subcategoria"></select>
                                </div>
                                <div class="form-group col-4">
                                    <label asp-for="Codigo_Presentacion" class="control-label"></label>
                                    <select asp-for="Codigo_Presentacion" class ="form-control" asp-items="ViewBag.Codigo_Presentacion"></select>
                                </div>
                                <div class="form-group col-4">
                                    <label asp-for="Codigo_Marca" class="control-label"></label>
                                    <select asp-for="Codigo_Marca" class ="form-control" asp-items="ViewBag.Codigo_Marca"></select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-8">
                                    <label asp-for="Nombre_Producto" class="control-label"></label>
                                    <input asp-for="Nombre_Producto" class="form-control" />
                                    <span asp-validation-for="Nombre_Producto" class="text-danger"></span>
                                </div>
                                <div class="form-group col-4">
                                    <label asp-for="Codigo_De_Barra" class="control-label"></label>
                                    <input asp-for="Codigo_De_Barra" class="form-control" />
                                    <span asp-validation-for="Codigo_De_Barra" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-4">
                                    <label asp-for="Stock_Producto" class="control-label"></label>
                                    <input asp-for="Stock_Producto" class="form-control" />
                                    <span asp-validation-for="Stock_Producto" class="text-danger"></span>
                                </div>
                                <div class="form-group col-4">
                                    <label asp-for="Precio_Compra_Producto" class="control-label"></label>
                                    <input asp-for="Precio_Compra_Producto" class="form-control" />
                                    <span asp-validation-for="Precio_Compra_Producto" class="text-danger"></span>
                                </div>
                                <div class="form-group col-4">
                                    <label asp-for="Precio_Venta_Producto" class="control-label"></label>
                                    <input asp-for="Precio_Venta_Producto" class="form-control" />
                                    <span asp-validation-for="Precio_Venta_Producto" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-8">
                                    <label asp-for="Descripcion_Producto" class="control-label"></label>
                                    <input asp-for="Descripcion_Producto" class="form-control" />
                                    <span asp-validation-for="Descripcion_Producto" class="text-danger"></span>
                                </div>
                                <div class="form-group col-4">
                                    <label asp-for="NombreImage" class="control-label"></label>
                                    <input asp-for="NombreImage" class="form-control" />
                                    <span asp-validation-for="NombreImage" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Estado_Producto" /> @Html.DisplayNameFor(model => model.Estado_Producto)
                                </label>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
        </div>
    </div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
