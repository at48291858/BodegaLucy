@model IEnumerable<BDLUCY_CodeFirst_Crud.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<style>
    .table-responsive {
        max-height: 450px;
        overflow: scroll;
    }
</style>
<body>
    <div class="row mt-4 bg-white">
        <div class="container pl-0 pr-0">
            <div class="row pt-0 pl-0 pr-0 ml-0 mr-0" style="background-color:#fe9f8b;">
                <h1 class="display-6 text-white">Productos</h1>
            </div>
            <div class="row mt-3 pl-0 pr-0">
                <div class="col-md-9">
                    <form asp-controller="Productoes" asp-action="Index" class="d-flex">
                        <div class="input-group mb-3">
                            <input type="text" name="buscar" class="form-control" placeholder="Buscar" />
                            <button class="btn btn-outline-dark" type="submit" value="Buscar" id="button-addon2">Buscar</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-3 d-md-flex justify-content-md-end">
                    <p>
                        <a class="btn btn-primary" asp-action="Create"><img src="~/src/icons/icons8-plus-20.png"></img> Agregar producto</a>
                    </p>
                </div>
            </div>
            <hr />
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="text-white" style="background-color:#fe9f8b;">
                        <tr>
                            <th style="font-family:'Calibri';">Codigo_Barra</th>
                            <th style="font-family:'Calibri';">Subcategoria</th>
                            <th style="font-family:'Calibri';">Presentacion</th>
                            <th style="font-family:'Calibri';">Producto</th>
                            <th style="font-family:'Calibri';">Stock</th>
                            <th style="font-family:'Calibri';">P.Compra</th>
                            <th style="font-family:'Calibri';">P.Venta</th>
                            <th style="font-family:'Calibri';">Imagen</th>
                            <th style="font-family:'Calibri';">Opciones</th>
                        </tr>
                    </thead>
                    <tbody>

                        @{
                            float stock = 0;
                            string msj = "";
                            string clase = "";
                        }
                        @foreach (var item in Model)
                        {
                            stock = item.Stock_Producto;
                            if (stock > 1 && stock <= 5)
                            {
                                msj = "POR AGOTARSE";
                                clase = "badge rounded-pill bg-danger";
                            }
                            else if (stock == 0)
                            {
                                msj = "AGOTADO";
                                clase = "badge rounded-pill bg-secondary";
                            }
                            else
                            {
                                msj = stock.ToString();
                                clase = "";
                            }
                            <tr>
                                <td style="font-family:'Calibri';">@Html.DisplayFor(modelItem => item.Codigo_De_Barra)</td>
                                <td style="font-family:'Calibri';">@Html.DisplayFor(modelItem => item.subcategoria.Nombre_Subcategoria)</td>
                                <td style="font-family:'Calibri';">@Html.DisplayFor(modelItem => item.presentacion.Nombre_Presentacion)</td>
                                <td style="font-family:'Calibri';">@Html.DisplayFor(modelItem => item.Nombre_Producto)</td>
                                <td><span class="@clase" style="font-family:'Calibri';">@msj</span></td>
                                <td style="font-family:'Calibri';">@Html.DisplayFor(modelItem => item.Precio_Compra_Producto)</td>
                                <td style="font-family:'Calibri';">@Html.DisplayFor(modelItem => item.Precio_Venta_Producto)</td>
                                <td>
                                    <img decoding="async" src="@item.NombreImage" asp-append-version="true" width="100px" height="100px" />
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Codigo_Producto"><img src="~/src/icons/icons8-edit-20.png"></img></a>
                                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Codigo_Producto"><img src="~/src/icons/icons8-table-of-content-20.png"></img></a>
                                    <!--<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Codigo_Producto"><img src="~/src/icons/icons8-trash-20 (1).png"></img></a>-->
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

