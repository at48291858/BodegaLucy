@model BDLUCY_CodeFirst_Crud.Models.Incidencia

@{
    ViewData["Title"] = "Create";
}

<body>
    <div class="row mt-4 bg-white">
        <div class="container mb-0 pt-0 pl-0 pr-0">
            <div class="row mb-0 pt-0 pl-0 pr-0" style="background-color:#fe9f8b;">
                <h1 class="display-6 text-white">Registrar Incidencia</h1>
            </div>
            <hr />
            <div class="row">
                <div class="col">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="form-group col-6">
                                <label asp-for="Codigo_Producto" class="control-label">Codigo_Barra del Producto</label>
                                <select asp-for="Codigo_Producto" class="form-control" asp-items="ViewBag.Codigo_Producto" required>
                                    <option selected>Seleccionar opción</option>
                                </select>
                            </div>
                            <div class="form-group col-6">
                                <label asp-for="Cantidad_Incidencia" class="control-label">Cantidad</label>
                                <input asp-for="Cantidad_Incidencia" class="form-control" />
                                <span asp-validation-for="Cantidad_Incidencia" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="form-group col-6">
                                <label asp-for="Descripcion_Incidencia" class="control-label">Descripción</label>
                                <input asp-for="Descripcion_Incidencia" class="form-control" />
                                <span asp-validation-for="Descripcion_Incidencia" class="text-danger"></span>
                            </div>
                            <div class="form-group col-6">
                                <label asp-for="Fecha_Incidencia" class="control-label">Fecha y Hora</label>
                                <input asp-for="Fecha_Incidencia" class="form-control" />
                                <span asp-validation-for="Fecha_Incidencia" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <!--<div class="form-group">

                        </div>-->
                        <div class="form-group">
                            <!--<a type="submit" value="Create" class="btn btn-primary" asp-action="Index" style="background-color:#fd6041; border:none; color:#fff;">Guardar</a>-->
                            <input type="submit" value="Create" class="btn btn-primary" style="background-color:#fd6041; border:none; color:#fff;" />
                            <a class="btn btn-warning" asp-action="Index" style="background-color:#ffa834; border:none; color:#fff;">Cancelar</a>
                        </div>
                        <br />
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }