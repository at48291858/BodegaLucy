@model IEnumerable<BDLUCY_CodeFirst_Crud.Models.Incidencia>

@{
    ViewData["Title"] = "Index";
}
<body style="background-color: #ffeae5;">
    <div class="row mt-4 bg-white border border-dark">
        <div class="container mb-0 pt-0 pl-0 pr-0">
            <div class="row mb-0 pt-0 pl-0 pr-0" style="background-color:#fe9f8b;">
                <h1 class="display-6 text-white">Incidencias</h1>
            </div>
            <div class="row mt-3 pl-0 pr-0">
                <div class="col-md-7">
                        <form class="d-flex">
                            <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                        </form>
                </div>
                <div class="col-md-5">
                    <p>
                        <a class="btn btn-primary" asp-action="Create"><img src="~/src/icons/icons8-plus-25.png"></img> Agregar producto</a>
                        <a class="btn btn-info text-white" asp-action=""><img src="~/src/icons/icons8-downloading-updates-25.png"></img> Imprimir reporte</a>
                    </p>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Producto
                            </th>
                            <th>
                                Descripcion Incidencia
                            </th>
                            <th>
                                Cantidad Incidencia
                            </th>
                            <th>
                                Fecha Incidencia 
                            </th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.producto.Codigo_De_Barra)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion_Incidencia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cantidad_Incidencia)
                            </td>
                            <td>
                                @String.Format("{0:dd/MM/yyyy}",item.Fecha_Incidencia)
                            </td>
                            <td>
                                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Codigo_Incidencia"><img src="~/src/icons/icons8-edit-25.png"></img></a> 
                                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Codigo_Incidencia"><img src="~/src/icons/icons8-table-of-content-25.png"></img></a> 
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Codigo_Incidencia"><img src="~/src/icons/icons8-trash-25.png"></img></a>
                            </td>
                        </tr>
                }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>