@model IEnumerable<BDLUCY_CodeFirst_Crud.Models.Distribuidor>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de distribuidores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary text-white">Registrar distribuidor</a>
</p>
<table class="table">
    <thead class="text-white" style="background-color:#fe9f8b;">
        <tr>
            <th style="font-family:'Calibri';">
                Razón Social
            </th>
            <th style="font-family:'Calibri';">
                RUC
            </th>
            <th style="font-family:'Calibri';">
                Dirección
            </th>
            <th style="font-family:'Calibri';">
                Teléfono
            </th>
            <th style="font-family:'Calibri';">
                Nombre Contacto
            </th>
            <th style="font-family:'Calibri';">
                Teléfono contacto
            </th>
            <th style="font-family:'Calibri';">
                Estado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Razon_Social_Distribuidor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RUC_Distribuidor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion_Distribuidor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono_Distribuidor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Contacto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono_Contacto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado_Distribuidor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Codigo_Distribuidor">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Codigo_Distribuidor">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Codigo_Distribuidor">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
