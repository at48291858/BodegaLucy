@model IEnumerable<BDLUCY_CodeFirst_Crud.Models.Cliente>

<style>
    .table-responsive {
        max-height: 500px;
        overflow: scroll;
    }
</style>
<div class="row mt-4 bg-white">
    <div class="container pl-0 pr-0">
        <div class="row pt-0 pl-0 pr-0 ml-0 mr-0" style="background-color:#fe9f8b;">
            <h1 class="display-6 text-white">Clientes</h1>
        </div>
        <div class="row mt-3 pl-0 pr-0">
            <div class="col-md-9">
                <form asp-controller="Clientes" asp-action="Index" class="d-flex">
                    <div class="input-group mb-3">
                        <input type="text" name="buscar" class="form-control" placeholder="Buscar" />
                        <button class="btn btn-outline-dark" type="submit" value="Buscar" id="button-addon2">Buscar</button>
                    </div>
                </form>
            </div>
            <div class="col-md-3 d-md-flex justify-content-md-end">
                <p>
                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Clientes",null,Context.Request.Scheme)','Nuevo Cliente')" class="btn btn-primary text-white"> Agregar Cliente </a>
                </p>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="text-white" style="background-color:#fe9f8b;">
                    <tr>
                        <th style="font-family:'Calibri';">Nombres</th>
                        <th style="font-family:'Calibri';">Apellido Paterno</th>
                        <th style="font-family:'Calibri';">Apellido Materno</th>
                        <th style="font-family:'Calibri';">Tipo de Documento</th>
                        <th style="font-family:'Calibri';">NºDocumento</th>
                        <th style="font-family:'Calibri';">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="font-family:'Calibri';">@Html.DisplayFor(modelItem => item.Nombre_Cliente)</td>
                            <td style="font-family:'Calibri';">@Html.DisplayFor(modelItem => item.Apellido_Paterno_Cliente)</td>
                            <td style="font-family:'Calibri';">@Html.DisplayFor(modelItem => item.Apellido_Materno_Cliente)</td>
                            <td style="font-family:'Calibri';">@Html.DisplayFor(modelItem => item.Tipo_Documento_Cliente)</td>
                            <td style="font-family:'Calibri';">@Html.DisplayFor(modelItem => item.Documento_Cliente)</td>
                            <td>
                                <div>
                                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Clientes",new {id=item.Codigo_Cliente},Context.Request.Scheme)','Editar Cliente')" class="btn btn-warning text-white">Editar</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>