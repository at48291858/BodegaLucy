@model BDLUCY_CodeFirst_Crud.Models.Paquete

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar paquete</h1>

<h4>Paquete</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Codigo_Paquete" />
            <div class="form-group">
                <th style="font-family:'Calibri';">
                    Nombre paquete
                </th>
                <input asp-for="Nombre_Paquete" class="form-control" />
                <span asp-validation-for="Nombre_Paquete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <th style="font-family:'Calibri';">
                    Cantidad por paquete
                </th>
                <input asp-for="Cantidad_Por_Paquete" class="form-control" />
                <span asp-validation-for="Cantidad_Por_Paquete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <th style="font-family:'Calibri';">
                    Contenido por paquete
                </th>
                <input asp-for="Contenido_Por_Unidad" class="form-control" />
                <span asp-validation-for="Contenido_Por_Unidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <th style="font-family:'Calibri';">
                    Descripción
                </th>
                <input asp-for="Descripcion_Paquete" class="form-control" />
                <span asp-validation-for="Descripcion_Paquete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <a class="btn btn-danger" asp-action="Index"> Cancelar </a>
                <input type="submit" value="Guardar cambios" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
