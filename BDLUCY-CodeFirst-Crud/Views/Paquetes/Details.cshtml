@model BDLUCY_CodeFirst_Crud.Models.Paquete

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Paquete</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre paquete
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre_Paquete)
        </dd>
        <dt class = "col-sm-2">
            Cantidad por paquete
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cantidad_Por_Paquete)
        </dd>
        <dt class = "col-sm-2">
            Contenido por paquete
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contenido_Por_Unidad)
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion_Paquete)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-danger" asp-action="Index"> Regresar </a>|
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Codigo_Paquete"> <i class="bi bi-pencil-square"> Editar </i> </a> 
    
</div>
